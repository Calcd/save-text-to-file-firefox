<?xml version="1.0"?>  
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE savetexttofileDTD SYSTEM "chrome://savetexttofile/locale/options.dtd">  

<prefwindow 
  id             = "saveTextToFile-prefs"  
  title	         = "&windowTitle.label;"
  xmlns	         = "http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  onload         = "SaveTextToFile_Options.setButtons();">
  
  <stringbundleset id = "stringbundleset">
    <stringbundle id =  "savetexttofile-options-string-bundle" src="chrome://savetexttofile/locale/options.properties"/>
  </stringbundleset>
   
  <prefpane label="&windowTitle.label;" align="center">  
    <preferences>  
      <preference 
	    id   = "save-text-to-file-showPreferences" 
	    name = "extensions.savetexttofile.showPreferences" 
	    type = "bool"/> 
	  <preference
	    id   = "save-text-to-file-fileName" 
	    name = "extensions.savetexttofile.fileName" 
	    type = "string"/>   
	  <preference 
	    id   = "save-text-to-file-pathToFile" 
	    name = "extensions.savetexttofile.pathToFile" 
	    type = "string"/> 
	  <preference 
	    id   = "save-text-to-file-datestamp" 
	    name = "extensions.savetexttofile.datestamp" 
	    type = "bool"/> 
	  <preference 
	    id   = "save-text-to-file-timestamp" 
	    name = "extensions.savetexttofile.timestamp" 
	    type = "bool"/>  
	  <preference 
	    id   = "save-text-to-file-datestampInLine" 
	    name = "extensions.savetexttofile.datestampInLine" 
	    type = "bool"/> 
	  <preference 
	    id   = "save-text-to-file-timestampInLine" 
	    name = "extensions.savetexttofile.timestampInLine" 
	    type = "bool"/>  
	  <preference 
	    id   = "save-text-to-file-lineSeparator" 
	    name = "extensions.savetexttofile.lineSeparator" 
	    type = "bool"/> 
	  <preference 
	    id   = "save-text-to-file-currentURL" 
	    name = "extensions.savetexttofile.currentURL" 
	    type = "bool"/> 
	  <preference 
	    id   = "save-text-to-file-saveMode" 
	    name = "extensions.savetexttofile.saveMode" 
	    type = "int"/>
	</preferences>  

	   
	<hbox>  
	  <label 
	    flex    = "1"
	    control = "showPreferences" 
	    value   = "&showPreferences.label;"/>
	  <checkbox 
	    id         = "showPreferences" 
	    preference = "save-text-to-file-showPreferences"/>
	</hbox>
	<hbox>  
	  <label 
	    flex    = "1"
	    control = "fileName" 
	    value   = "&fileName.label;"/>
	  <textbox
	    id         = "fileName" 
	    preference = "save-text-to-file-fileName"/>
	</hbox>
	<hbox>
	  <label 
	    flex    = "1"
	    control = "pathToFile" 
	    value   = "&pathToFile.label;"/>
	  <textbox 
	    id         = "pathToFile" 
	    readonly   = "true" 
	    preference = "save-text-to-file-pathToFile"/>
	  <button 
	    label     = "&changeDirectory.label;" 
	    oncommand = "SaveTextToFile_Options.selectDir();"/>
	</hbox>
	<hbox>  
	  <label 
	    flex    = "1"
	    control = "datestamp" 
	    value   = "&datestamp.label;"/>
	  <checkbox 
	    id         = "datestamp" 
	    preference = "save-text-to-file-datestamp"/>
	</hbox>
	<hbox>  
	  <label 
	    flex    = "1"
	    control = "timestamp" 
	    value   = "&timestamp.label;"/>
	  <checkbox 
	    id         = "timestamp" 
	    preference = "save-text-to-file-timestamp"/>
	</hbox>
	<hbox>  
	  <label 
	    flex    = "1"
	    control = "datestampInLine" 
	    value   = "&datestampInLine.label;"/>
	  <checkbox 
	    id         = "datestampInLine" 
	    preference = "save-text-to-file-datestampInLine"/>
	</hbox>
	<hbox>  
	  <label 
	    flex    = "1"
	    control = "timestampInLine" 
	    value   = "&timestampInLine.label;"/>
	  <checkbox 
	    id         = "timestampInLine" 
	    preference = "save-text-to-file-timestampInLine"/>
	</hbox>
	<hbox>  
	  <label 
	    flex    = "1"
	    control = "lineSeparator" 
	    value   = "&lineSeparator.label;"/>
	  <checkbox 
	    id         = "lineSeparator" 
	    preference = "save-text-to-file-lineSeparator"/>
	</hbox>
	<hbox>  
	  <label 
	    flex    = "1"
	    control = "currentURL" 
	    value   = "&currentURL.label;"/>
	  <checkbox 
	    id         = "currentURL" 
	    preference = "save-text-to-file-currentURL"/>
	</hbox>
	<hbox>
	  <label
	    flex    = "1"
	    control = "saveMode"
	    value   = "&saveMode.label;"/>
	  <menulist
	    preference = "save-text-to-file-saveMode">
	    <menupopup>
	      <menuitem 
	        label = "&createFile.label;" 
	        value = "1"/>
	      <menuitem 
	        label = "&appendFile.label;" 
	        value = "2"/>
	    </menupopup>
	  </menulist>
	</hbox>
  </prefpane> 
	
  <script type="application/javascript" src="options.js"/>
</prefwindow>